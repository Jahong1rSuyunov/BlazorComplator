@page "/index"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager navManager

<MudThemeProvider/>


    <NavMenu ConnectorType="@ConnectorType" ConString="@ConString"/>

    <RunQuery ConnectorType="@ConnectorType" ConString="@ConString"/>



@code{
    public string? ConnectorType;

    public string? ConString;

    protected override void OnInitialized()
    {
        var uri = navManager.ToAbsoluteUri(navManager.Uri);

        var queryString = QueryHelpers.ParseQuery(uri.Query);
        if (queryString.TryGetValue("conString", out var conString))
        {
            ConString = conString;
        }
        if(queryString.TryGetValue("ConnectorType", out var connectorType))
        {
            this.ConnectorType = connectorType;
        }
    }


}